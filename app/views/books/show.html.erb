<p id="notice">
  <%= notice %>
</p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @book.user %>
      <%= render 'books/new', book: @booknew %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-inverse">

          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size:'40x40' %><br />
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title, book_path %></td>
              <td><%= @book.body %></td>

              <!----投稿者のブック編集削除機能---->
              <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path, class: 'btn btn-sm btn-success' %>
              </td>
              <td>
                <%= link_to "Destroy", book_path, method: :delete, class: 'btn btn-sm btn-danger', "data-confirm" => "本当に削除しますか？" %>
                <!--・お手本では、投稿を削除する際に、ダイアログが出るように設定されています。-->
                <!--削除時に確認のダイアログが出ることで、誤った削除を防止することができるので、機能を追加してみましょう。-->
              </td>
              <% end %>
              <!---------------------------------->
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>


